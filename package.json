{
  "name": "prospector-ai-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["frontend", "admin", "backend"],
  "scripts": {
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "dev:admin": "npm run dev -w admin",
    "build:backend": "npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "build:admin": "npm run build -w admin",
    "lint": "npm run lint -w backend && npm run lint -w frontend && npm run lint -w admin",
    "postinstall": "npm run postinstall -w backend",
    "prepare": "husky"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "prisma": "^6.19.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  },
  "lint-staged": {
    "{backend,frontend,admin}/src/**/*.{ts,tsx}": "bash -c 'npm run lint'"
  }
}
