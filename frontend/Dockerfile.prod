# Production frontend + admin. Build from repo root: docker build -f frontend/Dockerfile.prod .

# Stage 1: build main frontend
FROM node:20-alpine AS frontend-builder
WORKDIR /app
COPY package.json package-lock.json* ./
COPY frontend/package.json frontend/package-lock.json* frontend/
COPY admin/package.json admin/package-lock.json* admin/
COPY backend/package.json backend/
COPY backend/prisma backend/prisma/
RUN npm install --legacy-peer-deps
COPY frontend/ frontend/
RUN npm run build --workspace=frontend

# Stage 2: build admin SPA (base /admin/)
FROM node:20-alpine AS admin-builder
WORKDIR /app
COPY package.json package-lock.json* ./
COPY frontend/package.json frontend/
COPY admin/package.json admin/
COPY backend/package.json backend/
COPY backend/prisma backend/prisma/
RUN npm install --legacy-peer-deps
COPY admin/ admin/
RUN npm run build --workspace=admin

# Stage 3: nginx serves main SPA + admin at /admin/
FROM nginx:alpine AS runner
RUN rm /etc/nginx/conf.d/default.conf
COPY frontend/nginx.conf /etc/nginx/conf.d/app.conf
COPY --from=frontend-builder /app/frontend/dist /usr/share/nginx/html
COPY --from=admin-builder /app/admin/dist /usr/share/nginx/html/admin
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
